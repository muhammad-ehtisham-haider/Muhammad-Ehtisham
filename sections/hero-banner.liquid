<section class="top-bar">
    <div class="container">
        <div class="topbar-content">
            <div class="logo">
                <img src="{{ section.settings.logo | image_url:  width: 151 }}" alt="Logo" />
            </div>

            <div class="topbar-text"> {{ section.settings.topbar_text }} </div>
            {% render 'custom-btn' btn_text: section.settings.topbar_button_text, btn_url: section.settings.topbar_button_url, btn_type: "btn-secondary" %}   
        </div>

        <div class="topbar-content-mobile"> 
        <div class="burger"> 
                <img class="burger-open" onclick="openMenu()" src="https://cdn.shopify.com/s/files/1/0910/9664/5916/files/hamburger.png?v=1736167253">
                <img class="burger-close" onclick="closeMenu()" src="https://cdn.shopify.com/s/files/1/0910/9664/5916/files/close.png?v=1736144507">

        </div>

        <div class="logo">
            <img src="{{ section.settings.logo | image_url:  width: 151 }}" alt="Logo" />
          </div>

          <div class="nav-menu">
            <div class="topbar-text"> {{ section.settings.topbar_text }} </div>
            {% render 'custom-btn' btn_text: section.settings.topbar_button_text, btn_url: section.settings.topbar_button_url, btn_type: "btn-secondary" %}   
       
        </div>
        </div>
    </div>
</section>

<section class="hero-banner">
    <div class="container">
        <div class="hero-inner-wrapper">
            <div class="hero-content-one"> </div>
            <div class="hero-content-two">
                <div class="hero-banner-text">        
                    <h1> {{  section.settings.heading }} </h1>
                    <p>  {{  section.settings.subheading }} </p>
                    <p>  {{  section.settings.subheadingDescription }} </p>
                    <div class="hero-banner-btn">
                    {% render 'custom-btn' btn_text:  section.settings.cta_button_text, btn_url: section.settings.cta_button_url, btn_type: "btn-primary"  %}
                        </div>
                </div>
                <div class="hero-banner-image"> </div>
            </div>
        </div>
    </div>
    <div class="hero-banner-footer_content"> {{ section.settings.hero_footer_content  }} </div>
    <div class="hero-banner-footer_content-mobile"> {{ section.settings.hero_footer_content-mobile  }} </div>

</section>

<style>
    .top-bar {
        background: #f7f7f7;
      }
      
      .topbar-content-mobile {
        display: none;
      }
      .burger-close {
        display: none;
      }
      .nav-menu {
        background-color: #f2f2f2;
        display: flex;
        flex-direction: column;
        align-items: center;
        display: none;
      }
      .nav-menu > button {
        margin-bottom: 25px;
      }
      .nav-menu .topbar-text {
        margin-top: 25px;
        font-family: "Jost", serif;
      }
      .custom-btn, .topbar-text, p {
        font-family: "Jost", serif;
      }
      .nav-menu a.custom-btn {
        margin: 16px 0 25px;
      }
      .hero-banner-footer_content-mobile {
        display: none;
        text-align: center;
        font-family: "Jost", serif;
      }
      .topbar-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1337px;
      }
      .logo {
        padding-block: 22px;
      }
      .hero-banner {
      }
      .container {
        max-width: 1440px;
        width: 100%;
        margin-inline: auto;
        padding-inline: clamp(1.5rem, 3.638vw + 0.136rem, 5rem);
      }
      .hero-content-one {
        background: url("https://cdn.shopify.com/s/files/1/0910/9664/5916/files/Frame.png?v=1736072465");
        height: 390px;
      }
      .hero-content-two {
        display: flex;
      }
      .hero-banner-text p {
        margin: unset;
      }
      .hero-banner-text p:nth-child(3) {
        margin-bottom: 50px;
      }
      .hero-banner-text {
        max-width: 485px;
      }
      .hero-banner-image {
        width: 100%;
        background-repeat: no-repeat;
      }
      
      .hero-banner-text h1 {
        font-family: "Jost", serif;
        font-size: clamp(3rem, 4.158vw + 1.441rem, 7rem);
        font-weight: 500;
        line-height: 70px;
        text-align: left;
      }
      .hero-banner-text h1 p {
        font-size: 20px;
        font-weight: 400;
        line-height: 28px;
        text-align: left;
      }
      .hero-banner-image {
        background: url("https://cdn.shopify.com/s/files/1/0910/9664/5916/files/Frame_1.png?v=1736072465");
        height: 402px;
      }
      .hero-banner-footer_content {
        text-align: center;
        font-family: "Jost", serif;
      }
      .hero-banner-footer_content {
        font-family: "Jost", serif;
        font-size: clamp(1.4rem, 0.208vw + 1.322rem, 1.6rem);
        font-weight: 400;
        line-height: 13.42px;
        text-align: center;
        padding-block: 10px;
        background: #f5f5f5;
      }
      
      .topbar-content-mobile {
        position: relative;
      }
      .topbar-content-mobile .logo {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .burger {
        position: absolute;
        top: 19px;
        left: 16px;
      }
      
      @media screen and (max-width: 767px) {
        .topbar-content {
          display: none;
        }
        .topbar-content-mobile {
          display: block;
        }
        .hero-banner-footer_content-mobile {
          display: block;
        }
        .hero-banner-footer_content {
          display: none;
        }
        .hero-content-one {
          display: none;
        }
        .hero-content-two {
          flex-direction: column;
        }
        .hero-banner-text {
          max-width: unset;
          font-family: "Jost", serif;
        }
        .hero-banner-text p {
          max-width: 340px;
          margin-inline: auto;
        }
        .hero-banner-text h1,
        .hero-banner-text p {
          text-align: center;
        }
        .hero-banner-text p:nth-child(3) {
          display: none;
        }
        .hero-banner {
          position: relative;
        }
        .hero-banner-btn {
          position: absolute;
          bottom: 84px;
          left: 50%;
          transform: translateX(-50%);
        }
      
        .hero-banner-image {
          background: url("https://cdn.shopify.com/s/files/1/0910/9664/5916/files/mobile_bg.png?v=1736166730");
          background-size: cover;
          background-repeat: no-repeat;
          height: 264px;
        }
      }
      
</style>
<script>
    function openMenu() {
            document.querySelector(".burger-open").style.display = "none";
            document.querySelector(".burger-close").style.display = "block";
            document.querySelector(".nav-menu").style.display = "flex";
    }
    function closeMenu() {
        document.querySelector(".burger-open").style.display = "block";
        document.querySelector(".burger-close").style.display = "none";
        document.querySelector(".nav-menu").style.display = "none";
}
</script>

{% schema %}

    {
        "name":"hero banner",
        "settings":[
            {
                "type":"image_picker",
                "id":"logo",
                "label": "LOGO"
            },
            {
                "type":"text",
                "id":"topbar_text",
                "label": "Top Bar Text",
                "default":"Find the ideal gift for your loved ones."
            },
            {
                "type":"url",
                "id":"topbar_button_url",
                "label": "Topbar Button Url",
            },
            {
                "type":"text",
                "id":"topbar_button_text",
                "label": "Topbar button Text",
                "default":"choose gift"
            },
            {
            "type":"text",
            "id":"heading",
            "label": "Heading",
            "default":"The Gift Guide"
            },
            {
                "type":"textarea",
                "id":"subheading",
                "label": "subheading",
                "default":"Discover Joy: Your Ultimate Holiday Gift Destination."
            },

            {
                "type":"textarea",
                "id":"subheadingDescription",
                "label": "Sub Heading Text",
                "default":"Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
            },


            
            {
                "type":"url",
                "id":"cta_button_url",
                "label": "CTA BUTTON URL",
            },
            {
                "type":"text",
                "id":"cta_button_text",
                "label": "CTA BUTTON TEXT",
                "default":"SHOP NOW"
            },
            {
                "type":"text",
                "id":"hero_footer_content",
                "label": "Hero Banner Footer Content",
                "default":"SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
                },
                {
                    "type":"text",
                    "id":"hero_footer_content-mobile",
                    "label": "Hero Banner Footer Content",
                    "default":"SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
                    }

        ],
        "presets":[{
            "name": "hero banner",
            "category":"banner"
        }]
    }

{% endschema %}